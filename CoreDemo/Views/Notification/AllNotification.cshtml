@using EntityLayer.Concrete
@model List<Notification>
@{
    ViewData["Title"] = "AllNotification";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Bildirimler</h1>
<table class="table table-bordered">
    <tr>
          <th>#</th>
    <th>Bildirim</th>
    <th>Tarih</th>
    <th>-</th>



    </tr>
    @foreach (var item in Model)
   {
       <tr>
           <td>@item.NotificationID</td>
            <td>@item.NotificationDetails</td>
            <td>@item.NotificationDate.ToShortDateString()</td>
            @{
                int deger = DateTime.Now.Hour - item.NotificationDate.Hour;

                string a = "  saat önce geldi";

                 }
                 <td>@deger@a </td>
       </tr>
   }

</table>
