@model List<Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Blog</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Blog Image </th>
                                <th> Kategorisi </th>
                                <th> Durumu </th>
                                <th> Tarih </th>
                                <th>Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                           {

                                <tr>
                                    <td>
                                        <img src="@item.BlogImage" class="mr-2" alt="image"> @item.BlogTitle
                                    </td>
                                    <td> @item.Category.CategoryName </td>
                                    <td>
                                        <label class="badge badge-gradient-success">@item.BlogStatus</label>
                                    </td>
                                    <td> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy")) </td>
                                    <td><a href="~/Blog/BlogReadAll/@item.BlogID" class="btn-sm btn-primary">Detay</a></td>
                                </tr>
                                
                             

                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
