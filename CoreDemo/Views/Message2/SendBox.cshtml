@model List<Message2>
@{
    ViewData["Title"] = "SendBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Giden Kutusu</h1>

<table class="table table-bordered">
    <tr>
        <th> # </th>
        <th>Mesaj Başlığı</th>
        <th>Alıcı</th>
        <th> Tarih</th>

        <th>Mesajı Aç</th>


    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageID</th>
            <td>@item.Subject</td>
            <td>@item.SenderUser.NameSurname</td>
            <td>@(((DateTime)item.MessageDateTime).ToString("dd-MMM-yyyy"))</td>
            <td><a href="~/Message2/MessageDetails/@item.MessageID" class="btn btn-warning">Mesajı Aç</a></td>


        </tr>
    }
</table>
<a href="/Message2/SendMessage/" class="btn btn-primary"> Yeni Mesaj Oluştur</a>