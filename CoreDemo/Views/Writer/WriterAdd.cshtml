@model CoreDemo.Models.AddWriter
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<form class="form-group" method="post"   enctype="multipart/form-data" >

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Bilgileri Güncelleme</h4>
            <div class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputName1">Ad</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="WriterName" placeholder="Name">
                </div>
                @Html.HiddenFor(x=>x.WriterID)
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adresi</label>
                    @Html.TextBoxFor(x=>x.WriterMail,new {@class="form-control"})
                    @Html.ValidationMessageFor(x=>x.WriterMail)

                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre</label>
                    @Html.TextBoxFor(x=>x.WriterPassword,new {@class="form-control",@placeholder="Password" })
                    @Html.ValidationMessageFor(x=>x.WriterPassword)

                </div>

                <div class="form-group">
                    <label>Yazar Görsel</label><br />
                   <input type="file" name="WriterImage" class="form-control-file"/>
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Yazar Hakkında</label>
                    @Html.TextAreaFor(x=>x.WriterAbout,10,3,new {@class="form-control"})

                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                <button class="btn btn-light">İptal</button>
            </div>
        </div>
    </div>
</div>
</form>
