@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategoriler</h1>
<table class="table table-bordered">
    <tr>
        <th> # </th>
        <th>Kategori Adı</th>
        <th>Pasif Yap</th>
        <th>Aktif Yap</th>
        <th>Düzenle</th>
       


    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td>Aktif</td>
            <td>Pasif</td>
            <td><a id="id1" onclick="return confirm('Silmek istediğinize emin misiniz');" href="/Admin/Category/DeleteCategory/@item.CategoryID" class="btn btn-info">Pasif Yap</a></td>
            <td><a href="" class="btn btn-warning">Aktif Yap</a></td>
            <td><a href="" class="btn btn-success">Düzenle</a></td>

            

        </tr>
    }
   

</table>

<br />
<a class="btn btn-primary" href="/Admin/Category/AddCategory/">Yeni Kategori Ekle</a>
<br />
<br />

 @Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))